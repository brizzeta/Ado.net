        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7._02._2024_Product"
        mc:Ignorable="d"
        Title="InputColor" MinHeight="120" MinWidth="300" Height="120" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label>Введите цвет</Label>
        <TextBox Grid.Row="1" Margin="5" Name="textbox1"></TextBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="5" Click="Button_Click">Отмена</Button>
            <Button Grid.Column="1" Margin="5" Click="Button_Click_1">ОК</Button>
        </Grid>
    </Grid>
</Window>
